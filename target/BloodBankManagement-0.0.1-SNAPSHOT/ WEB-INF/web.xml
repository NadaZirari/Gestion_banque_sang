<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Nom de l'application -->
    <display-name>BloodBankManagement</display-name>

    <!-- Page d'accueil par dÃ©faut -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Exemple de servlet pour Donneur -->
    <servlet>
        <servlet-name>DonneurServlet</servlet-name>
        <servlet-class>com.bloodbank.servlets.DonneurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DonneurServlet</servlet-name>
        <url-pattern>/donneur</url-pattern>
    </servlet-mapping>

    <!-- Exemple de servlet pour Receveur -->
    <servlet>
        <servlet-name>ReceveurServlet</servlet-name>
        <servlet-class>com.bloodbank.servlets.ReceveurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReceveurServlet</servlet-name>
        <url-pattern>/receveur</url-pattern>
    </servlet-mapping>

