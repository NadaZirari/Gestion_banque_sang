<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">


    <persistence-unit name="BloodBankPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>model.Donneur</class>
        <class>model.Receveur</class>
        
        
        <properties>
           <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/bloodbankdb"/>
<property name="jakarta.persistence.jdbc.user" value="postgres"/>
<property name="jakarta.persistence.jdbc.password" value="nada123"/>
<property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
           

<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
             <property name="hibernate.format_sql" value="true"/>
        </properties>
        
        
        
    </persistence-unit>
</persistence>
